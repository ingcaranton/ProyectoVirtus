doctype html
html
  head
    meta(name="description" content="La importancia de aprender idiomas incluye al lenguaje de señas, ya que tenemos que vincularnos con todos y que mejor forma de hacerlo sino es por los juegos.")
    meta(name="keywords" content="Juego, gamificacion, señas, lenguaje")
    meta(charset="utf-8")
    title=JuguemosConLasSenas
    link(rel='stylesheet', href='/css/magnifier.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(type='text/javascript' src='/js/jquery-1.11.2.min.js')
    block head
    script(type='text/javascript' src='/js/bootbox.min.js')
    script(type='text/javascript' src='/js/script.js') 
  body
    #logo
      a(href="/")
        img(src="/images/logo.png" title="Tomado de: 'Diccionario de señas INSOR'")
    a(href="/")
      #titulo
        h1 
          p.arriba
            span.naranja.stroke J
            span.rojo.stroke U
            span.verde.stroke G
            span.azul.stroke U
            span.rosado.stroke E
            span.verdeO.stroke M
            span.fuccia.stroke O
            span.naranja.stroke S
            span &nbsp;&nbsp;&nbsp;&nbsp;
            span.rojo.stroke C
            span.verde.stroke O
            span.azul.stroke N
          p.abajo
            span.rosado.stroke L
            span.verdeO.stroke A
            span.fuccia.stroke S
            span &nbsp;&nbsp;&nbsp;&nbsp;
            span.naranja.stroke S
            span.rojo.stroke E
            span.verde.stroke Ñ
            span.rosado.stroke A
            span.verdeO.stroke S
    #contenidoJuego
      block content

    .botonesJuega
      .home
        a(href="/" title="Home")
          .icon
      .fullScreen
        a(href="javascript:void(0);" title="Pantalla Completa" onclick="setFullscreen()")
          .icon

    #piePagina
      #escudo
        img(src="/images/escudo.png" title="Tomado de: 'www.udistrital.edu.co'")
      #creditos
        p Universidad Distrital Francisco José de Caldas - Ingeniería de Sistemas 
        p Grupo de Investigación VIRTUS
