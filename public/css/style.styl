  @font-face
    font-family "CalamityJaneNF-Bold"
    src url("/fonts/CalamityJaneNF-Bold.ttf") format("truetype")
    
/*Mixins*/
  buton-image(url,urlHover)
    .icon 
      float left  
      width 50px
      height 50px 
      background-size 100%
      background-image url(url) 
      background-repeat no-repeat
    .icon:hover 
      cursor pointer
      background-image url(urlHover)      

body
  overflow-x hidden

#logo
  float left
  width 20%
  margin 3% 7% 2% 7%
  img 
    width 100%
    height 100%
#titulo
  float left
  width 50%
  margin 1% 2% 2% 2%
  h1 
    text-align center
    font oblique bold 380% SpeedballNo2NF-Bold
    p.abajo
      margin-top 1%
    .stroke 
      font-size 150%
      letter-spacing 0
      text-shadow -4px -4px 4px #fff, 4px -4px 4px #fff, -4px 4px 4px #fff, 4px 4px 4px #fff
    .naranja
      color #f6a800
    .rojo
      color #f41313
    .verde
      color #97be0d
    .rosado
      color #ef8f9b
    .azul
      color #009cd1
    .verdeO 
      color #367c2a
    .fuccia
      color #e2004f
#menu
  background rgba(0, 0, 1, 0.5)
  width 24%
  margin 0 3% 1% 3%
  padding 1%
  float left
  
  ul 
    width 100%
    li.izquierda
      text-align left
    li.derecha
      text-align right
    li.linea
      border-bottom 1px solid white
    li
      height 50px
      width 80%
      padding 1%
      list-style none
      a:hover 
        text-decoration none
        color black
      a
        width 100%
        color white
        b 
          text-align center
          font-family SaginawBold
          font-size 25px
   
#novedades
