    input::-moz-placeholder 
      color #fff
    input:-ms-input-placeholder 
      color #fff
    input
      width 70%
      margin 2% 15%
      height 30px
      border-left none
      border-top none
      border-right none
      border-bottom 3px solid #f44336
      text-align center
      background none
    textarea
      width 70%
      margin 2% 15%
      border 3px solid #f44336
      text-align center
    textarea::-webkit-input-placeholder
      color #fff
    textarea:-moz-placeholder 
      color #fff
    textarea::-moz-placeholder 
      color #fff
    textarea:-ms-input-placeholder 
      color #fff
    button
      width 70%
      margin 2% 15%
      border 1.8px solid #f44336
      text-align center
      color white
      background-color #f44336
      height 25px
