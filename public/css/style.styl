/*Fuentes*/  
  @font-face
    font-family "SpeedballNo2NF-Bold"
    src url("/fonts/SpeedballNo2NF-Bold.ttf") format("truetype")
  @font-face
    font-family "SaginawBold"
    src url("/fonts/SaginawBold.ttf") format("truetype")
  @font-face
    font-family "Trading-Post-Bold"
    src url("/fonts/Trading-Post-Bold.ttf") format("truetype")
  @font-face
    font-family "WorstveldSlingBoldOblique"
    src url("/fonts/WorstveldSlingBoldOblique.ttf") format("truetype")
