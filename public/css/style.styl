    buton-image("/images/facebookBlanco.png","/images/facebookNegro.png")
  a.twitter
    buton-image("/images/twitterBlanco.png","/images/twitterNegro.png")
  a.google
    buton-image("/images/googleBlanco.png","/images/googleNegro.png")

#flecha
  width 100%
  float left
  a#inicioPagina
