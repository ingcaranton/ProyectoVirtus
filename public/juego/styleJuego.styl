#contenidoJuego
  background rgba(0, 0, 1, 0.5)
  width 70%
  margin 3% 15%
  min-height 400px
  float left
  
//fullscreen
  #juego:-webkit-full-screen, -moz-full-screen ,  -ms-fullscreen, fullscreen 
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    overflow hidden
    div
      width 80%
      margin 5% 10%
      height 80%
      background rgba(0, 0, 1, 0.5)
    #jugador
      padding 10% 25%
    #cargando 
      padding 20% 25%
    
//ingreso de nombre jugador
  #jugador
    width 100%
    padding 5% 25%
    float left
    label, input
      width 80%
      margin 2% 10%
      float left
      text-align center
    label 
      color #fff     
    input 
      background transparent
      border 1px solid #fff  
      color #fff    
    img
      width 40%
      margin 1% 30%
    
    button
      width 50%
      margin 2% 25%
      float left
      text-align center
      background #fff
      color #000
      border 2px solid #000
      border-radius 10px
    
//esperando partida
  #cargando
    label
      width 100%
      text-align center
      color white
      float left
    img
      width 8%
      margin 10% 46%
      float left