  width 24%
  margin 1% 3% 4% 3%
  padding 1%
  position relative
  float left
  
  img
    width 100%
    
  p#fecha
    color black
    text-align center
    width 100%
  
  p#noticia
    width 100%
    text-align center
    color white
    font-family WorstveldSlingBoldOblique
    font-size 20px

#contenido
  background rgba(0, 0, 1, 0.5)
  width 60%
  margin 0 5%
  min-height 400px
  float right
  
  h1 
    width 100%
    text-align center
    color white
    font-family zealotli
    font-size 50px
  #home
    margin 5%
    width 100%
  
